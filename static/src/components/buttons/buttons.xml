            <button class="btn btn-primary w-100 d-flex align-items-center justify-content-start" t-on-click="createNewAdditionalBarcode">
                <i class="bi bi-file-earmark-plus me-2"></i>Secondary Barcode
            </button>
        </div>
    </div>

    <!-- Horizontal Line -->
    <hr class="mb-4 d-none d-sm-block"/>
