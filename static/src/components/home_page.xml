<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div t-name="custom_barcode.Home" class="o_custom_barcode_main_menu_container o_home_menu_background">
        <div class="o_custom_barcode_main_menu position-relative bg-view">
            <a href="#" class="o_custom_barcode_menu d-block float-start" t-on-click="this.goBackMenu">
                <i class="oi oi-chevron-left"/>
            </a>
            <h1 class="mb-4">Barcode Scanning</h1>

            <div class="o_custom_barcode_container position-relative d-inline-block mt-4 mb-5">
                <div class="o_custom_mobile_barcode_container">
                    <button class="btn btn-primary o_custom_mobile_barcode" t-on-click="this.triggerScanner">
                        <i class="fa fa-camera fa-2x o_mobile_barcode_camera"/> Tap to scan
                    </button>
                    <img src="/barcodes/static/img/barcode.png" alt="Barcode" class="img-fluid mb-1 mt-1"/>
                </div>

                <span class="o_custom_barcode_laser"/>
            </div>

            <ul class="text-start mb-sm-5 ps-4">
                <li>Scan a <b>product</b> to show its Details and quantity.</li>
            </ul>

            <hr class="mb-4 d-none d-sm-block"/>
        </div>
    </div>

</templates>
